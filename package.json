{
  "name": "codegraph",
  "version": "0.1.0",
  "description": "Code cross-reference visualization and AI context engine for TypeScript. Analyzes codebases to show dependencies, enables AI tools with MCP, and renders beautiful arc diagrams.",
  "type": "module",
  "bin": {
    "codegraph": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/mcpb-entry.ts --format esm --dts --clean && npm run copy-static",
    "copy-static": "mkdir -p dist/viz/public && cp -r src/viz/public/* dist/viz/public/",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "build:mcpb": "npm run build && ./scripts/build-mcpb.sh"
  },
  "keywords": [
    "typescript",
    "code-analysis",
    "visualization",
    "tree-sitter",
    "dependency-graph",
    "developer-tools",
    "mcp",
    "model-context-protocol",
    "ai-tools",
    "cursor",
    "claude",
    "impact-analysis",
    "refactoring",
    "arc-diagram",
    "cross-reference"
  ],
  "author": "CodeGraph",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codegraph-dev/codegraph"
  },
  "bugs": {
    "url": "https://github.com/codegraph-dev/codegraph/issues"
  },
  "homepage": "https://github.com/codegraph-dev/codegraph#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "icon.png"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "chokidar": "5.0.0",
    "commander": "14.0.3",
    "express": "5.2.1",
    "graphology": "0.26.0",
    "graphology-types": "0.24.8",
    "open": "11.0.0",
    "simple-git": "3.31.1",
    "tree-sitter": "0.21.1",
    "tree-sitter-go": "0.21.2",
    "tree-sitter-javascript": "0.21.4",
    "tree-sitter-python": "0.21.0",
    "tree-sitter-typescript": "0.23.2",
    "ws": "8.19.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/express": "5.0.6",
    "@types/node": "25.3.0",
    "@types/ws": "8.18.1",
    "sharp": "0.34.5",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
