{
  "name": "codegraph",
  "version": "0.1.0",
  "description": "Code cross-reference visualization and AI context engine. Analyzes TypeScript codebases to show how every file, function, and import connects — then gives AI tools full dependency context for smarter refactoring.",
  "author": {
    "name": "CodeGraph"
  },
  "license": "MIT",
  "icon": "icon.png",
  "is_local": true,
  "server": {
    "type": "node",
    "entry": "dist/mcpb-entry.js"
  },
  "tools": [
    {
      "name": "connect_repo",
      "description": "Connect to a codebase for analysis. Accepts a local path or GitHub URL."
    },
    {
      "name": "get_symbol_info",
      "description": "Look up details about a symbol by name."
    },
    {
      "name": "get_dependencies",
      "description": "Get what a symbol depends on."
    },
    {
      "name": "get_dependents",
      "description": "Get what depends on a symbol."
    },
    {
      "name": "impact_analysis",
      "description": "Analyze blast radius of changing a symbol."
    },
    {
      "name": "get_file_context",
      "description": "Get complete context about a file."
    },
    {
      "name": "search_symbols",
      "description": "Search for symbols by name."
    },
    {
      "name": "get_architecture_summary",
      "description": "High-level project architecture overview."
    },
    {
      "name": "list_files",
      "description": "List all files with stats."
    }
  ],
  "user_config": {
    "project_path": {
      "type": "string",
      "title": "Project Directory",
      "description": "Path to the TypeScript project to analyze on startup (optional — you can also use connect_repo in chat)",
      "required": false
    }
  }
}
